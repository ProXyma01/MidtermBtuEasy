<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Corner radius -->
        </shape>
    </item>

    <!-- Border -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Transparent inside to show the background -->
            <stroke android:width="2dp" android:color="@color/black" /> <!-- Border color and width -->
            <corners android:radius="15dp" /> <!-- Match the corner radius -->
        </shape>
    </item>
</layer-list>